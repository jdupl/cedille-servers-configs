# Template used to create this container: /usr/share/lxc/templates/lxc-debian
# Parameters passed to the template: -r jessie
# For additional config options, please look at lxc.container.conf(5)
lxc.network.type = empty
lxc.rootfs = /var/lib/lxc/canoe.cedille.etsmtl.ca/rootfs

# Common configuration
lxc.include = /usr/share/lxc/config/debian.common.conf

# Container specific configuration
lxc.mount = /var/lib/lxc/canoe.cedille.etsmtl.ca/fstab
lxc.utsname = canoe.cedille.etsmtl.ca
lxc.arch = amd64
lxc.autodev = 1
lxc.kmsg = 0

# Below is user defined config for network connectivity and autostart
# Author: Justin Duplessis <jdupl@linux.com>
# Written on: 2016-03-04

lxc.network.type = veth
lxc.network.flags = up
lxc.network.link = br1
lxc.network.ipv4 = 10.8.8.6/24
lxc.network.ipv4.gateway = 10.8.8.254

lxc.start.auto = 1
lxc.start.delay = 5
